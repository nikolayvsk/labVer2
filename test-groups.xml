<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name = "Countering Test Suite" verbose="1">
    <test name="Exception Test">
        <groups>
            <run>
                <exclude name="countering"/>
                <include name="exceptions"/>
            </run>
        </groups>
        <classes>
            <class name="Tests"></class>
        </classes>
    </test>
</suite>

